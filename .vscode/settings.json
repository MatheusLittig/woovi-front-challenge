{
  /** editor settings */
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },

  /** tailwind settings */
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],

  /** material icons */
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.associations": {
    "presets": "less",
    "ui": "mjml",
    "web": "client",
    "stores": "context",
    "adapters": "cluster",
    "react": "React-components"
  }
}